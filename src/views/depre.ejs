                                <div class="mb-3 row">
                                    <label for="basic-url" class="col-sm-4 col-form-label">Fecha de adquisición</label>
                                    <div class="col-sm-8">
                                        <input type="date" name="adquirido" class="form-control">
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <label for="basic-url" class="col-sm-4 col-form-label">Fecha de caducidad</label>
                                    <div class="col-sm-8">
                                        <input type="date" name="caducidad" class="form-control">
                                    </div>
                                </div>

                                <div class="mb-3 row">

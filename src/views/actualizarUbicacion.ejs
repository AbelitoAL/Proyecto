</head>
<%- include('./barramenu'); %>
<body>
    <form action="/actualizarUbicacion" method="POST">
    <input type="hidden" name="id" value="<%= id %>">
    <div id="kt_content" class="content d-flex flex-column flex-column-fluid">
        <div class="innerMain_content">
            <div class="container innerMain_container">

                <div class="tab-content" id="myTabContent">
                     <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h1 class="page-title"><i class="bi bi-arrow-clockwise"></i> Actualizar Ubicaci√≥n</h1>
                            </div>
                           <h3></h3>
                           <h2></h2> 
                            <div class="form-group row">
                                <label class="col-sm-3 col-md-3 col-xxl-3 col-form-label text-sm-end"
                                    for="sitio">Sitio</label>
                                <div class="col-md-6 col-lg-5 col-xxl-4 col-sm-5">
                                    <input class="form-control" data-val="true" id="sitio" name="sitio" type="text"
                                        value="<%= sitio %>" required />
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-sm-3 col-md-3 col-xxl-3 col-form-label text-sm-end"
                                    for="localizacion">Localizacion</label>
                                <div class="col-md-6 col-lg-5 col-xxl-4 col-sm-5">
                                        <input class="form-control" data-val="true" id="localizacion" name="localizacion" type="text"
                                            value="<%= localizacion %>" required />
                                 </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-sm-3 col-md-3 col-xxl-3 col-form-label text-sm-end"
                                    for="departamento">departamento</label>
                                <div class="col-md-6 col-lg-5 col-xxl-4 col-sm-5">
                                        <input class="form-control" data-val="true" id="departamento" name="departamento" type="text"
                                            value="<%= departamento %>" required />
                                </div>
                            </div>  
                            
                            <input type="submit" class="btn btn-secondary" style="margin-left: 900px;"  value="Actualizar">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


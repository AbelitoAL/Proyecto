        crossorigin="anonymous"></script>
</head>

<body>
    <%- include('./barramenu'); %>
        <div class="table-container">
            <h1>Lista de Ubicaciones de la Empresa</h1>

            <div class="table-row">
                <div class="table-header">ID</div>
                <div class="table-header">Sitio</div>
                <div class="table-header">Localizaci√≥n</div>
                <div class="table-header">Departamento</div>
            </div>

            <% for (let i=0; i < ubicacion.length; i++) { %>
                <div class="table-row">
                    <div class="table-cell">
                        <%= ubicacion[i].id %>
                    </div>
                    <div class="table-cell">
                        <%= ubicacion[i].sitio %>
                    </div>
                    <div class="table-cell">
                        <%= ubicacion[i].localizacion %>
                    </div>
                    <div class="table-cell">
                        <%= ubicacion[i].departamento %>
                    <div class="table-cell">
                        <form action="/eliminarUbicacion" method="post">
                            <input type="hidden" name="id" value="<%= ubicacion[i].id %>">
                            <button>Eliminar</button>
                        </form>
                    </div>
                    <div class="table-cell">
                        <form action="/renderActualizarUbicacion" method="post">
                            <input type="hidden" name="id" value="<%= ubicacion[i].id %>">
                            <input type="hidden" name="sitio" value="<%= ubicacion[i].sitio %>">
                            <input type="hidden" name="localizacion" value="<%= ubicacion[i].localizacion %>">
                            <input type="hidden" name="departamento" value="<%= ubicacion[i].departamento %>">
                            <button>Actualizar</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
</body>

</html>
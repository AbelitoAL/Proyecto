    <body>
        <form action="/actualizarReserva" method="POST">
            <div id="kt_content" class="content d-flex flex-column flex-column-fluid">
                <div class="innerMain_content">
                    <div class="container innerMain_container">

                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">
                                <div class="card">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h1 class="page-title"><i class="bi bi-arrow-clockwise"></i> Actualizar Reservas
                                            de Activos Fijos</h1>
                                    </div>
                                    <h3></h3>
                                    <h2></h2>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-md-3 col-xxl-3 col-form-label text-sm-end"
                                            for="sitio">ID Reserva
                                        </label>
                                        <div class="col-md-6 col-lg-5 col-xxl-4 col-sm-5">
                                            <input class="form-control" data-val="true" id="id"
                                                name="id" type="text" value="<%= id %>" required />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-md-3 col-xxl-3 col-form-label text-sm-end"
                                            for="sitio">ID Activo Fijo
                                        </label>
                                        <div class="col-md-6 col-lg-5 col-xxl-4 col-sm-5">
                                            <input class="form-control" data-val="true" id="idactivofijo"
                                                name="idactivofijo" type="text" value="<%= idactivofijo %>" required />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-md-3 col-xxl-3 col-form-label text-sm-end"
                                            for="cipersona">cipersona</label>
                                        <div class="col-md-6 col-lg-5 col-xxl-4 col-sm-5">
                                            <input class="form-control" data-val="true" id="cipersona" name="cipersona"
                                                type="text" value="<%= cipersona %>" required />
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-md-3 col-xxl-3 col-form-label text-sm-end"
                                            for="fecha">Fecha Inicio</label>
                                        <div class="col-md-6 col-lg-5 col-xxl-4 col-sm-5">
                                            <input class="form-control" id="fecha" name="fecha" placeholder="Ingrese una fecha de inicio" type="date" style="margin-right: 10px;" required>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-3 col-md-3 col-xxl-3 col-form-label text-sm-end"
                                            for="descripcion">Descripci√≥n</label>
                                        <div class="col-md-6 col-lg-5 col-xxl-4 col-sm-5">
                                            <input class="form-control" data-val="true" id="descripcion"
                                                name="descripcion" type="text" value="<%= descripcion %>" required />
                                        </div>
                                    </div>

                                    <input type="submit" class="btn btn-secondary" style="margin-left: 900px;"
                                        value="Actualizar">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
